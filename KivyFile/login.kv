#:import utils kivy.utils
<LoginView>:
    name: "login"
    username_text: username
    password_text: password
    BackgroundBox:

    MDCard:
        orientation:'vertical'
        size_hint: [0.8,0.4]
        pos_hint: {"center_x": .5, "center_y": .5}
        BoxLayout:
            orientation:'vertical'
            MDLabel:
                font_name: 'assets/Inter-SemiBold.ttf'
                color: utils.get_color_from_hex('#023b80')
                text:"Login"
                text_size: self.size
                font_size: 40
                halign: "center"
                valign: "middle"
            MDTextField:
                id: username
                hint_text: "  Username"
            MDTextField:
                id: password
                hint_text: "  Password"
            MDFillRoundFlatButton:
                text: "Sign In"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.getUser()
            MDFillRoundFlatIconButton:
                icon: "account-circle"
                text: "Sign Up"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.manager.current = 'register'


<BackgroundBox>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
            ##f6f7fb #023b80
                rgba: utils.get_color_from_hex('#023b80')
            RoundedRectangle:
                pos:self.pos
                size: self.size
                radius: [0,0,20,20]




