#:import utils kivy.utils
#:import md_icons kivymd.icon_definitions
<LoginView>:
    name: "login"
    BackgroundBox:

    MDCard:
        orientation:'vertical'
        size_hint: [0.8,0.4]
        pos_hint: {"center_x": .5, "center_y": .5}
        BoxLayout:
            orientation:'vertical'
            MDLabel:
                font_name: 'assets/Inter-SemiBold.ttf'
                color: app.theme_cls.primary_color
                text:"Login"
                text_size: self.size
                font_size: 40
                halign: "center"
                valign: "middle"
            MDTextField:
                hint_text: "  Username"
            MDTextField:
                hint_text: "  Password"
            MDFillRoundFlatButton:
                text: "Sign In"
                pos_hint: {"center_x": .5, "center_y": .5}
            MDFillRoundFlatIconButton:
                icon: "account-circle"
                text: "Sign Up"
                pos_hint: {"center_x": .5, "center_y": .5}



<BackgroundBox>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#D6B3F8')
            RoundedRectangle:
                pos:self.pos
                size: self.size
                radius: [0,0,20,20]
    BoxLayout:
        orientation: 'horizontal'



