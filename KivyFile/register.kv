#:import utils kivy.utils


<RegisterView>:
    email_text: email
    username_text: username
    password_text: password
    password2_text: password2
    name: "register"
    BackgroundBox2:

    MDCard:
        orientation:'vertical'
        size_hint: [0.8,0.5]
        pos_hint: {"center_x": .5, "center_y": .5}
        BoxLayout:
            orientation:'vertical'
            MDLabel:
                font_name: 'assets/Inter-SemiBold.ttf'
                color: utils.get_color_from_hex('#023b80')
                text:"Register"
                text_size: self.size
                font_size: dp(40)
                halign: "center"
                valign: "middle"
            MDTextField:
                id: email
                hint_text: "  Email"
                required: True
            MDTextField:
                id:username
                hint_text: "  Username"
                required: True
            MDTextField:
                id:password
                hint_text: "  Password"
                required: True
            MDTextField:
                id:password2
                hint_text: "  Confirm Password"
                required: True
            MDFillRoundFlatButton:
                text: "Sign Up"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.postUser()
            MDFillRoundFlatIconButton:
                icon: "account-circle"
                text: "Log In"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.manager.current = 'login'


<BackgroundBox2>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#023b80')
            RoundedRectangle:
                pos:self.pos
                size: self.size
                radius: [0,0,dp(20),dp(20)]
    BoxLayout:
        orientation: 'horizontal'


