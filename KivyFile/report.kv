<FormImage>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#FFFFFF')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: dp(7), dp(7), dp(7), dp(7)
    AnchorLayout:
        size_hint: None, None
