<FormLabel>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#FFFFFF')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: dp(7), dp(7), dp(7), dp(7)
    AnchorLayout:
        size_hint: None, None
        size: root.size
        pos: root.pos
        anchor_x: 'left'
        anchor_y: 'center'
        Label:
            id: icon
            size_hint: None, None
            size: dp(45), dp(45)
            pos: self.pos
            text: root.icon
            font_name: 'assets/Font-Awesome.ttf'
            font_size: sp(20)
            color: utils.get_color_from_hex('#c9d0dc')
    AnchorLayout:
        size_hint: None, None
        size: root.size
        pos: root.pos
        anchor_x: 'right'
        anchor_y: 'center'
        Label:
            id: chevron
            size_hint: None, None
            size: dp(45), dp(45)
            pos: self.pos
            text: root.chevron
            font_name: 'assets/Font-Awesome.ttf'
            font_size: sp(20)
            color: utils.get_color_from_hex('#023b80')
    AnchorLayout:
        size_hint: None, None
        size: root.size
        pos: root.pos
        anchor_x: 'center'
        anchor_y: 'center'
        padding: dp(45), dp(0), dp(45), dp(0)
        Label:
            id: category
            size_hint: 1, None
            height: dp(45)
            pos: self.pos
            text: root.type
            font_name: 'assets/Inter-SemiBold.ttf'
            font_size: sp(14)
            color: utils.get_color_from_hex('#c9d0dc')
            halign: 'left'
            valign: 'center'
            text_size: self.size
            shorten: True
            shorten_from: 'right'
            max_lines: 1

<CustomButton>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#FFFFFF')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: dp(7), dp(7), dp(7), dp(7)

<ReportView>:
    GridLayout:
        size_hint: 1, None
        height: self.minimum_height
        cols: 1
        spacing: 10
        Button:
            size_hint: 1, None
            height: dp(50)
            text: 'Name'
        GridLayout:
            size_hint: 1, None
            height: self.minimum_height
            cols: 2
            spacing: 10
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'Gender'
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'Age'
        Button:
            size_hint: 1, None
            height: dp(50)
            text: 'Breed'
        GridLayout:
            size_hint: 1, None
            height: self.minimum_height
            cols: 2
            spacing: 10
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'Color'
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'Size'
        Button:
            size_hint: 1, None
            height: dp(50)
            text: 'Date'
        GridLayout:
            size_hint: 1, None
            height: self.minimum_height
            cols: 2
            spacing: 10
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'State'
            Button:
                size_hint: 1, None
                height: dp(50)
                text: 'Zip'
        Button:
            size_hint: 1, None
            height: dp(50)
            text: 'City'
        Button:
            size_hint: 1, None
            height: dp(50)
            text: 'Status'
        MDTextField:
            size_hint: 1, None
            height: dp(50)
            hint_text: 'Other'
